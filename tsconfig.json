{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "utils": ["./src/lib/utils"],
      "components/*": ["./src/components/*"],
      "ui/*": ["./src/components/ui/*"],
      "hooks/*": ["./src/hooks/*"],
      "lib/*": ["./src/lib/*"],
      "public/*": ["./public/*"],
      "types/*": ["./src/types/*"],
      "data/*": ["./src/data/*"],
      "forms/*": ["./src/forms/*"],
      "actions/*": ["./src/actions/*"],
      "schema/*": ["./src/schema/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
